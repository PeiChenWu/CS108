<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.cityinformation.MainActivity">

    <Button
        android:id="@+id/lookup_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOOKUP CITIES"
        android:onClick="LookUpCities" />

    <Button
        android:id="@+id/add_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD CITY"
        android:onClick="AddCity" />

    <Button
        android:id="@+id/reset_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset DATABASE"
        android:onClick="Reset" />
</LinearLayout>
